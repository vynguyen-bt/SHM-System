/* ✅ RESET AND BASE STYLES */
html {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  font-family: Arial, sans-serif;
  background-color: #f4f7fa;
  color: #333;
  margin: 0;
  padding: 20px;
  width: 100%;
  min-height: 100vh;
  overflow-x: auto;
  overflow-y: auto;
}

/* ✅ MAIN PAGE TITLE */
h1 {
  text-align: center;
  color: #007BFF;
  margin-bottom: 20px;
  font-size: 28px;
  font-weight: 700;
}

/* ✅ SECTION TITLES - Simple styling like previous versions */
.container h1 {
  text-align: right;
  color: #0056b3;
  font-size: 24px;
  font-weight: 600;
  margin: 0 0 25px 0;
  padding: 0;
}

/* ✅ SUBSECTION TITLES */
.container h2 {
  color: #495057;
  font-size: 20px;
  font-weight: 600;
  margin: 20px 0 15px 0;
  padding: 10px 0;
  border-bottom: 2px solid #dee2e6;
}

/* ✅ SUB-SUBSECTION TITLES */
.container h3 {
  color: #6c757d;
  font-size: 18px;
  font-weight: 500;
  margin: 15px 0 10px 0;
}

.container {
  max-width: 1200px;
  width: 95%;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  overflow-x: auto; /* Handle horizontal overflow */
}

label {
  font-size: 16px;
  font-weight: 500;
  display: block;
  margin: 10px 0 5px;
}

input,
select,
button {
  width: 100%;
  max-width: 400px;
  padding: 12px;
  margin-bottom: 15px;
  border-radius: 5px;
  border: 1px solid #ccc;
  display: block;
  font-size: 14px;
  font-family: Arial, sans-serif;
  box-sizing: border-box; /* Ensure padding is included in width */
}

input[type="number"],
input[type="file"],
select {
  background-color: #f9f9f9;
}

/* ✅ ENHANCED SELECT DROPDOWN STYLING */
select {
  cursor: pointer;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
  background-repeat: no-repeat;
  background-position: right 12px center;
  background-size: 16px;
  padding-right: 40px;
}

select:hover {
  border-color: #007BFF;
  background-color: #fff;
}

select:focus {
  outline: none;
  border-color: #007BFF;
  box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
  background-color: #fff;
}

/* ✅ SPECIAL STYLING FOR MODE COMBINE OPTION */
select option[value="combine"] {
  background-color: #e3f2fd;
  font-weight: bold;
  color: #1976d2;
}

button {
  background-color: #007BFF;
  color: white;
  font-size: 16px;
  cursor: pointer;
  border: none;
}

button:hover {
  background-color: #0056b3;
}

.chart-container {
  text-align: center;
  margin-top: 20px;
}

#curvatureChart {
  width: 100%;
  max-width: 850px;
  margin: 20px auto;
}

.results {
  margin-top: 20px;
  background-color: #f8f9fa;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #ccc;
}

.note {
  font-size: 14px;
  color: #888;
  text-align: center;
  margin-top: 20px;
}

.button-open {
  margin-top: 20px;
  font-weight: bold;
  background-color: #0056b3;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 10px;
  position: relative; /* Changed from absolute to relative */
  height: 40px;
  min-width: 300px;
  max-width: 100%;
  margin-left: auto;
  margin-right: 20px;
  display: block;
  box-sizing: border-box;
}

.main-part {
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 60px;
  width: 100%;
  margin-bottom: 20px;
}

.body-part {
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
  margin-bottom: 30px;
  padding: 0 10px;
  box-sizing: border-box;
}

/* ✅ RESPONSIVE DESIGN IMPROVEMENTS */
@media (max-width: 1200px) {
  .container {
    max-width: 95%;
    padding: 15px;
  }

  .button-open {
    min-width: 250px;
    font-size: 14px;
  }
}

@media (max-width: 768px) {
  body {
    padding: 10px;
  }

  .container {
    padding: 10px;
  }

  .button-open {
    min-width: 200px;
    font-size: 12px;
    padding: 8px 15px;
  }

  input, select, button {
    max-width: 100%;
  }
}

/* ✅ 3D CHART CONTAINER IMPROVEMENTS */
#damage3DChart {
  width: 100% !important;
  max-width: 100% !important;
  height: auto !important;
  min-height: 600px !important;
  margin: 20px 0 !important;
  border-radius: 8px !important;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1) !important;
  background-color: #fff !important;
  overflow: visible !important;
  position: relative !important;
  z-index: 1 !important;
}

/* ✅ DEBUG BUTTONS STYLING */
button[onclick*="debug"],
button[onclick*="test"],
button[onclick*="Debug"],
button[onclick*="Test"] {
  display: inline-block !important;
  width: auto !important;
  max-width: 300px !important;
  margin: 5px 5px !important;
  padding: 8px 16px !important;
  font-size: 14px !important;
  border-radius: 5px !important;
  cursor: pointer !important;
  box-sizing: border-box !important;
}

/* ✅ BUTTON CONTAINER FOR BETTER LAYOUT */
.button-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin: 20px 0;
  justify-content: flex-start;
  align-items: center;
}

.button-container button {
  flex: 0 0 auto;
  width: auto !important;
  max-width: none !important;
  margin: 0 !important;
}
